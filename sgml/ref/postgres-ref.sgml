 <refnamediv>
  <refname>postgres</refname>
  <refpurpose>lance un serveur <productname>PostgreSQL</productname> en
  mode mono utilisateur</refpurpose>
 </refnamediv>

 <indexterm zone="app-postgres">
  <primary>postgres (le programme)</primary>
 </indexterm>

